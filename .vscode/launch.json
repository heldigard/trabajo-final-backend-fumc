{
  // Configuraci√≥n para ejecutar y depurar la API con VS Code
  // Presiona F5 para iniciar la API en modo debug
  // üéØ AUTOM√ÅTICO: Instala dependencias antes de ejecutar
  "version": "0.2.0",
  "configurations": [
    {
      // Configuraci√≥n para ejecutar la API FastAPI
      "name": "üöÄ FastAPI - Tienda Virtual",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal",
      "env": {
        // Las variables de entorno se leen del archivo .env
        // pero puedes sobreescribirlas aqu√≠ si es necesario
      },
      // ‚ú® TAREA PREVIA: Instala dependencias autom√°ticamente antes de ejecutar
      "preLaunchTask": "install-dependencies",
      "presentation": {
        "hidden": false,
        "group": "API",
        "order": 1
      }
    },
    {
      // Configuraci√≥n alternativa: ejecutar main.py directamente
      "name": "üêç Python - main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      // ‚ú® TAREA PREVIA: Instala dependencias autom√°ticamente antes de ejecutar
      "preLaunchTask": "Instalar Dependencias",
      "presentation": {
        "hidden": false,
        "group": "API",
        "order": 2
      }
    }
  ]
}
